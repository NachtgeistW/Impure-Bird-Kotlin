<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detail_page_user_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="@id/guideline_verticalS"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontalT" />

    <TextView
        android:id="@+id/detail_page_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/detail_page_user_avatar"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontalT" />

    <TextView
        android:id="@+id/detail_page_user_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/text_barrier"
        app:layout_constraintStart_toStartOf="@id/guideline_verticalS"
        app:layout_constraintTop_toBottomOf="@id/detail_page_user_avatar" />

    <include
        layout="@layout/tab_like_comment_rt_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/detail_page_user_text" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontalT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_verticalS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_verticalE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/text_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="guideline_verticalE, detail_page_user_text"
        tools:layout_editor_absoluteX="21dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
